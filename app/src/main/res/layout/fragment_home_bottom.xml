<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgroundkonsumenn"
    android:layout_height="match_parent"
    android:id="@+id/frame"

    >
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="false"
        android:layout_centerInParent="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:textColor="#1d26d4"
                android:id="@+id/txtemailkonsumen"

                />
            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:radius="6dp"
                app:slideInterval="3000"
                app:strokeWidth="1dp"


                />
<!--            <include-->
<!--                layout="@layout/lay_jumbotron"-->
<!--                android:id= "@+id/baner"-->

<!--                />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/carouselView"
                android:id="@+id/lnpesan"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imgPesan"
                    android:src="@drawable/iconpesan"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pesan Masuk"
                        android:textColor="#1d26d4"
                        android:textSize="20sp"
                        android:layout_weight="5"
                        android:layout_below="@+id/baner"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/txtpesan"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtinfopesan"
                        android:text="infopesan"
                        android:textColor="#1d26d4"
                        android:textSize="20sp"
                        />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="selamat datang"
                android:textColor="#1d26d4"
                android:textSize="20sp"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/lnpesan"
                android:layout_centerHorizontal="true"
                android:id="@+id/txtwelcome"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="namaku"
                android:textColor="#1d26d4"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/txtwelcome"
                android:layout_centerHorizontal="true"
                android:id="@+id/txtnamakonsumen"/>



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/taglinehub"
                android:src="@drawable/taglinehub"
                android:layout_below="@+id/txtnamakonsumen"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_below="@+id/taglinehub"
                android:layout_marginTop="10dp"


                >
                <ImageView
                    android:id="@+id/imgob"
                    android:layout_width="80dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:src="@drawable/iconob"


                    />

                <ImageView
                    android:id="@+id/imgrenov"
                    android:layout_width="80dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:src="@drawable/iconrenov"

                    />

                <ImageView
                    android:id="@+id/imgac"
                    android:layout_width="80dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:src="@drawable/iconac"

                    />

                <ImageView
                    android:id="@+id/imgrumah"
                    android:layout_width="80dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:src="@drawable/iconhome"

                    />
            </LinearLayout>


<!--            <fragment-->
<!--                android:id="@+id/nav_host_fragment"-->
<!--                android:name="androidx.navigation.fragment.NavHostFragment"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:defaultNavHost="true"-->
<!--                app:navGraph="@navigation/mobile_navigation" />-->



        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
</FrameLayout>

