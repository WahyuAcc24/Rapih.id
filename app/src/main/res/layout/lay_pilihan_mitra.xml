<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/rapih_icon"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:id="@+id/imglogoorang"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat datang diaplikasi Rapih.id \n Silahkan mulai dengan pencarian anda"
        android:textSize="20sp"
        android:textColor="#1d26d4"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtinfo1"
        android:layout_below="@+id/imglogoorang"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apakah anda Konsumen atau Mitra ?"
        android:textSize="20sp"
        android:layout_below="@+id/txtinfo1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#1d26d4"
        android:textAlignment="center"
        android:id="@+id/txtinfo2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtinfo2"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
        <ImageView
            android:id="@+id/imgmitrabu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/iconmitrabu"
            android:layout_gravity="center_horizontal"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mitra Badan Usaha"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"
            />
        </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1"
    >
        <ImageView
            android:id="@+id/imgmitraac"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/iconmitraac"

            android:layout_gravity="center_horizontal"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mitra Ac"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"
            />


</LinearLayout>
    </LinearLayout>



