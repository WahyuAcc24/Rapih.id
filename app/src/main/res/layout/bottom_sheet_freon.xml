<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_pesanan_konsumen"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="com.google.android.material.BottomSheet">


    <TextView
        android:id="@+id/textViewFreonR22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:drawablePadding="16dp"
        android:drawableLeft="@drawable/iconfreonkecil"
        android:drawableStart="@drawable/iconfreonkecil"
        android:text="Freon Type R22"
        android:textSize="16sp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/textViewFreonR32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:drawablePadding="16dp"
        android:drawableLeft="@drawable/iconfreonkecil"
        android:drawableStart="@drawable/iconfreonkecil"
        android:text="Freon Type R32"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/textViewFreonR22"
        />


</androidx.constraintlayout.widget.ConstraintLayout>